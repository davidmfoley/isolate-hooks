{
  "name": "isolate-hooks",
  "version": "1.0.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "davidmfoley@gmail.com",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf ./lib/",
    "test": "TS_NODE_PROJECT=tsconfig.test.json mocha",
    "test:watch": "nodemon -q -e ts --exec \"yarn test\" --watch src --watch test",
    "prettier": "prettier -c '{src,test}/**/*.ts'",
    "fix:prettier": "prettier --write '{src,test}/**/*.ts'",
    "cover": "TS_NODE_PROJECT=tsconfig.test.json COVERAGE=1 nyc mocha && open coverage/index.html",
    "ci": "yarn build && yarn test && yarn prettier"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/react": "^16.9.49",
    "chai": "^4.2.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "source-map-support": "^0.5.19",
    "ts-mocha": "^7.0.0",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ],
    "watch-files": [
      "./src/**/*.ts",
      "./test/**/*.ts"
    ],
    "reporter": "dot"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
